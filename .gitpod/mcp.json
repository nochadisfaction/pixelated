{
    "mcpServers": {
        "MCP Installer": {
            "command": "pnpm",
            "type": "stdio",
            "args": [
                "exec",
                "cursor-mcp-installer-free",
                "/workspace/pixelated"
            ],
            "cwd": "/workspace/pixelated"
        },
        "shadcn": {
            "command": "pnpm",
            "args": [
                "dlx",
                "shadcn@canary",
                "registry:mcp"
            ],
            "cwd": "/workspace/pixelated",
            "env": {
                "REGISTRY_URL": "https://tweakcn.com/r/themes/registry.json"
            }
        },
        "perplexity-search": {
            "command": "pnpm",
            "args": [
                "exec",
                "@smithery/cli",
                "run",
                "@arjunkmrm/perplexity-search",
                "--key",
                "ab351ddc-26d1-4448-a316-d9ad9c5df416"
            ],
            "cwd": "/workspace/pixelated"
        },
        "@21st-dev/magic": {
            "command": "pnpm",
            "args": [
                "exec",
                "@21st-dev/magic",
                "API_KEY=\"${MAGIC_API_KEY}\""
            ],
            "cwd": "/workspace/pixelated"
        },
        "github": {
            "command": "pnpm",
