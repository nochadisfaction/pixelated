---
import BaseLayout from '~/layouts/BaseLayout.astro'
import TabbedLayout from '~/layouts/TabbedLayout.astro'
import ListView from '~/components/views/ListView.astro'

// Page metadata and config
const title = 'Changelog'
const subtitle = ''
const description = 'The changelog of the Astro AntfuStyle Theme project'
const bgType = 'particle'
const toc = false
const ogImage = true
const prerender = true
---

<BaseLayout
  title={title}
  description={description}
  bgType={bgType}
  ogImage={ogImage}
>
  <TabbedLayout subtitle={subtitle}>
    <ListView pageToc={toc} collectionType="changelog" />
  </TabbedLayout>
</BaseLayout>
