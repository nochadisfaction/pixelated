<style>
  /* Editorial Typography */
  .editorial-headline {
    font-family: 'Times New Roman', serif;
    letter-spacing: -0.02em;
    line-height: 0.9;
  }

  .editorial-section-header {
    font-family: 'Times New Roman', serif;
    letter-spacing: -0.01em;
  }

  .editorial-card-title {
    font-family: 'Times New Roman', serif;
  }

  /* Stats Animation */
  .editorial-stat {
    animation: editorial-fade-in 0.8s ease-out;
    animation-fill-mode: both;
  }

  .editorial-stat:nth-child(1) { animation-delay: 0.1s; }
  .editorial-stat:nth-child(2) { animation-delay: 0.2s; }
  .editorial-stat:nth-child(3) { animation-delay: 0.3s; }
  .editorial-stat:nth-child(4) { animation-delay: 0.4s; }

  @keyframes editorial-fade-in {
    0% { 
      transform: translateY(20px);
      opacity: 0;
    }
    100% { 
      transform: translateY(0);
      opacity: 1;
    }
  }

  /* Button Effects */
  .editorial-button {
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
  }

  .editorial-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.5s ease;
  }

  .editorial-button:hover::before {
    left: 100%;
  }

  .editorial-button-outline {
    position: relative;
    transition: all 0.3s ease;
  }

  .editorial-button-outline:hover {
    box-shadow: inset 0 0 20px rgba(239, 68, 68, 0.1);
  }

  /* Card Effects */
  .editorial-card {
    transition: all 0.3s ease;
    position: relative;
  }

  .editorial-card:hover {
    transform: translateY(-2px);
  }

  .editorial-card::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: #ef4444;
    transition: width 0.3s ease;
  }

  .editorial-card:hover::after {
    width: 100%;
  }

  /* Testimonial Layout */
  .editorial-testimonial {
    background: rgba(17, 24, 39, 0.5);
    border: 1px solid rgba(55, 65, 81, 0.5);
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .editorial-testimonial:hover {
    border-color: rgba(239, 68, 68, 0.3);
    background: rgba(17, 24, 39, 0.7);
  }

  /* CTA Section */
  .editorial-cta {
    position: relative;
    background: linear-gradient(135deg, rgba(17, 24, 39, 0.8), rgba(31, 41, 55, 0.6));
  }

  .editorial-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: repeating-linear-gradient(
      90deg,
      transparent,
      transparent 2px,
      rgba(239, 68, 68, 0.05) 2px,
      rgba(239, 68, 68, 0.05) 4px
    );
  }

  /* Newspaper Print Simulation */
  @media print {
    .editorial-headline {
      color: #000 !important;
    }
    
    .editorial-button,
    .editorial-button-outline {
      display: none;
    }
  }

  /* Hover Effects for Links */
  a:hover {
    text-decoration: underline;
    text-decoration-color: #ef4444;
  }

  /* Typography Improvements */
  p {
    text-align: justify;
    hyphens: auto;
  }

  /* Responsive Typography */
  @media (max-width: 768px) {
    .editorial-headline {
      font-size: 3rem;
      line-height: 0.95;
    }
    
    .editorial-section-header {
      font-size: 2.5rem;
    }
  }

  /* Loading Animation for Stats */
  .editorial-stat .text-4xl,
  .editorial-stat .text-5xl {
    font-variant-numeric: tabular-nums;
    animation: counter-load 1.5s ease-out;
  }

  @keyframes counter-load {
    0% { 
      transform: scale(0.8);
      opacity: 0;
    }
    50% {
      transform: scale(1.1);
    }
    100% { 
      transform: scale(1);
      opacity: 1;
    }
  }
</style> 