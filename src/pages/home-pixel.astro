---
// Pixel Art/Retro Futurism Homepage for Pixelated Empathy (Dark Mode Only)
import BaseLayout from '@/layouts/BaseLayout.astro'
import { Badge } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card'

export const prerender = true

const heroStats = [
  { value: "10,000+", label: "Neural Networks Trained" },
  { value: "50,000+", label: "Clinical Sessions" }, 
  { value: "95%", label: "Diagnostic Accuracy" },
  { value: "24/7", label: "AI Processing" }
]

const features = [
  {
    title: "Neural Pattern Recognition",
    description: "Advanced deep learning algorithms analyze patient behavioral patterns with unprecedented precision.",
    icon: "üß†",
    accent: "cyan"
  },
  {
    title: "Real-Time Biometric Analysis", 
    description: "Continuous monitoring of physiological and emotional states using cutting-edge sensor fusion.",
    icon: "üì°",
    accent: "teal"
  },
  {
    title: "Quantum-Encrypted Data",
    description: "Military-grade encryption ensures absolute patient privacy and regulatory compliance.",
    icon: "üîê",
    accent: "cyan"
  },
  {
    title: "Predictive Intervention AI",
    description: "Machine learning models anticipate therapeutic needs before critical moments.",
    icon: "‚ö°",
    accent: "teal"
  },
  {
    title: "Holographic Data Visualization",
    description: "Multi-dimensional patient data representation for comprehensive therapeutic insight.",
    icon: "üîÆ",
    accent: "cyan"
  },
  {
    title: "Autonomous Protocol Adjustment",
    description: "Self-optimizing treatment algorithms that evolve with each patient interaction.",
    icon: "üéØ",
    accent: "teal"
  }
]
---

<BaseLayout
  title="Pixelated Empathy - Neural Healthcare Intelligence"
  description="Next-generation AI-powered mental health platform leveraging quantum computing and neural networks for unprecedented therapeutic precision."
  bgType="dark"
>
  <div class="relative min-h-screen bg-gray-950 text-white">
    <!-- Animated Grid Background -->
    <div class="absolute inset-0 overflow-hidden">
      <div class="grid-pattern opacity-20"></div>
      <div class="cyber-glow-1"></div>
      <div class="cyber-glow-2"></div>
    </div>

    <!-- Hero Section -->
    <section class="relative py-24 lg:py-40 overflow-hidden">
      <div class="relative container mx-auto px-4 z-10">
        <div class="max-w-5xl mx-auto text-center">
          <!-- Status Badge -->
          <div class="mb-10 animate-pulse-glow">
            <Badge className="inline-flex items-center gap-3 px-6 py-3 text-sm font-mono bg-cyan-500/10 border border-cyan-400/30 text-cyan-300 rounded-full">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-cyan-500"></span>
              </span>
              NEURAL CORE ONLINE
            </Badge>
          </div>

          <!-- Main headline -->
          <h1 class="text-5xl sm:text-7xl lg:text-8xl font-bold tracking-tight mb-10 cyber-text-glow">
            NEURAL
            <br />
            <span class="text-cyan-400 digital-flicker">
              HEALTHCARE
            </span>
            <br />
            INTELLIGENCE
          </h1>

          <!-- Description -->
          <p class="text-xl lg:text-2xl text-gray-300 mb-16 max-w-4xl mx-auto leading-relaxed font-light">
            Quantum-powered therapeutic AI that processes patient data through advanced neural networks, 
            delivering precision mental health interventions with cybernetic accuracy.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-6 justify-center mb-20">
            <Button size="lg" className="bg-cyan-500 hover:bg-cyan-400 text-gray-900 px-10 py-5 text-lg font-bold rounded-xl border border-cyan-400 shadow-lg shadow-cyan-500/25 hover:shadow-cyan-400/40 transform hover:scale-105 transition-all duration-300 glow-button">
              INITIALIZE SYSTEM
            </Button>
            <Button variant="outline" size="lg" className="px-10 py-5 text-lg font-bold rounded-xl border-2 border-teal-400 text-teal-300 hover:bg-teal-400/10 hover:shadow-teal-400/25 transition-all duration-300">
              VIEW NEURAL DEMO
            </Button>
          </div>

          <!-- Stats Grid -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
            {heroStats.map((stat, index) => (
              <div class="text-center p-6 bg-gray-900/50 rounded-xl border border-gray-700/50 hover:border-cyan-400/50 transition-all duration-300 stat-card">
                <div class="text-3xl lg:text-4xl font-bold text-cyan-400 mb-2 font-mono digital-counter">
                  {stat.value}
                </div>
                <div class="text-sm lg:text-base text-gray-400 font-mono uppercase tracking-wide">
                  {stat.label}
                </div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-24 lg:py-40 relative">
      <div class="absolute inset-0 bg-gradient-to-b from-transparent via-gray-900/50 to-transparent"></div>
      <div class="container mx-auto px-4 relative z-10">
        <div class="max-w-4xl mx-auto text-center mb-20">
          <h2 class="text-4xl lg:text-6xl font-bold text-white mb-8 cyber-text-glow">
            ADVANCED
            <span class="text-teal-400 digital-flicker">
              CAPABILITIES
            </span>
          </h2>
          <p class="text-xl text-gray-300 font-light">
            Cutting-edge neural processing modules designed for next-generation therapeutic precision.
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <Card className={`bg-gray-900/70 border border-gray-700/50 hover:border-${feature.accent}-400/50 rounded-xl overflow-hidden group hover:shadow-lg hover:shadow-${feature.accent}-500/20 transition-all duration-500 cyber-card`}>
              <CardHeader className="pb-4 relative">
                <div class={`text-5xl mb-4 group-hover:scale-110 transition-transform duration-500 ${feature.accent === 'cyan' ? 'cyber-icon-cyan' : 'cyber-icon-teal'}`}>
                  {feature.icon}
                </div>
                <CardTitle className="text-xl font-bold text-white font-mono uppercase tracking-wide">
                  {feature.title}
                </CardTitle>
              </CardHeader>
              <CardContent>
                <CardDescription className="text-gray-300 leading-relaxed">
                  {feature.description}
                </CardDescription>
              </CardContent>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Terminal CTA Section -->
    <section class="py-24 lg:py-40 relative">
      <div class="absolute inset-0 bg-gradient-to-r from-gray-950 via-gray-900 to-gray-950"></div>
      <div class="relative container mx-auto px-4 text-center z-10">
        <div class="max-w-5xl mx-auto">
          <div class="bg-gray-900/90 rounded-2xl border border-gray-700/50 p-12 lg:p-16 terminal-window">
            <div class="flex items-center gap-2 mb-8">
              <div class="w-3 h-3 bg-red-500 rounded-full"></div>
              <div class="w-3 h-3 bg-yellow-500 rounded-full"></div>
              <div class="w-3 h-3 bg-green-500 rounded-full"></div>
              <span class="text-gray-500 text-sm font-mono ml-4">neural_healthcare_terminal.exe</span>
            </div>
            
            <h2 class="text-4xl lg:text-6xl font-bold text-cyan-400 mb-8 font-mono terminal-text">
              > READY TO UPGRADE_
              <br />MENTAL HEALTHCARE?
            </h2>
            
            <p class="text-xl lg:text-2xl text-gray-300 mb-12 leading-relaxed font-mono">
              Initialize neural protocol and join the cybernetic revolution in therapeutic AI.
            </p>
            
            <div class="flex flex-col sm:flex-row gap-6 justify-center">
              <Button size="lg" className="bg-cyan-500 hover:bg-cyan-400 text-gray-900 px-10 py-5 text-lg font-bold rounded-xl font-mono uppercase tracking-wide border border-cyan-400 shadow-lg shadow-cyan-500/25 hover:shadow-cyan-400/40 transform hover:scale-105 transition-all duration-300">
                >> EXECUTE START_PROTOCOL
              </Button>
              <Button size="lg" className="bg-transparent border-2 border-teal-400 text-teal-300 hover:bg-teal-400/10 px-10 py-5 text-lg font-bold rounded-xl font-mono uppercase tracking-wide transition-all duration-300">
                >> ACCESS_NEURAL_LINK
              </Button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  /* Grid Pattern Background */
  .grid-pattern {
    background-image: 
      linear-gradient(rgba(6, 182, 212, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(6, 182, 212, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    animation: grid-move 20s linear infinite;
  }

  @keyframes grid-move {
    0% { transform: translate(0, 0); }
    100% { transform: translate(50px, 50px); }
  }

  /* Cyber Glow Effects */
  .cyber-glow-1, .cyber-glow-2 {
    position: absolute;
    width: 400px;
    height: 400px;
    border-radius: 50%;
    filter: blur(100px);
    opacity: 0.1;
    animation: float 8s ease-in-out infinite;
  }

  .cyber-glow-1 {
    background: radial-gradient(circle, #06b6d4, transparent);
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .cyber-glow-2 {
    background: radial-gradient(circle, #14b8a6, transparent);
    top: 60%;
    right: 10%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
  }

  /* Text Effects */
  .cyber-text-glow {
    text-shadow: 0 0 10px rgba(6, 182, 212, 0.5);
  }

  .digital-flicker {
    animation: flicker 2s linear infinite;
  }

  @keyframes flicker {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.8; }
    75% { opacity: 0.9; }
  }

  /* Button Effects */
  .glow-button {
    box-shadow: 
      0 0 20px rgba(6, 182, 212, 0.3),
      inset 0 0 20px rgba(6, 182, 212, 0.1);
  }

  .glow-button:hover {
    box-shadow: 
      0 0 30px rgba(6, 182, 212, 0.5),
      inset 0 0 30px rgba(6, 182, 212, 0.2);
  }

  /* Card Effects */
  .cyber-card {
    backdrop-filter: blur(10px);
    position: relative;
    overflow: hidden;
  }

  .cyber-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 2px;
    background: linear-gradient(90deg, transparent, #06b6d4, transparent);
    animation: scan 3s linear infinite;
  }

  @keyframes scan {
    0% { left: -100%; }
    100% { left: 100%; }
  }

  /* Icon Effects */
  .cyber-icon-cyan {
    filter: drop-shadow(0 0 10px rgba(6, 182, 212, 0.7));
  }

  .cyber-icon-teal {
    filter: drop-shadow(0 0 10px rgba(20, 184, 166, 0.7));
  }

  /* Stats Counter */
  .digital-counter {
    font-variant-numeric: tabular-nums;
    letter-spacing: 0.05em;
  }

  .stat-card {
    backdrop-filter: blur(10px);
  }

  /* Terminal Effects */
  .terminal-window {
    backdrop-filter: blur(20px);
    box-shadow: 
      inset 0 0 50px rgba(6, 182, 212, 0.1),
      0 0 50px rgba(0, 0, 0, 0.5);
  }

  .terminal-text {
    text-shadow: 0 0 20px rgba(6, 182, 212, 0.8);
  }

  /* Pulse Glow Animation */
  .animate-pulse-glow {
    animation: pulse-glow 2s ease-in-out infinite;
  }

  @keyframes pulse-glow {
    0%, 100% { 
      box-shadow: 0 0 20px rgba(6, 182, 212, 0.3);
      transform: scale(1);
    }
    50% { 
      box-shadow: 0 0 30px rgba(6, 182, 212, 0.5);
      transform: scale(1.02);
    }
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .cyber-glow-1, .cyber-glow-2 {
      width: 200px;
      height: 200px;
    }
  }
</style> 