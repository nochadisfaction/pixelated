{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm astro build",
  "installCommand": "pnpm install --prefer-offline",
  "framework": "astro",
  "outputDirectory": "dist",
  "devCommand": "pnpm astro dev",

  "build": {
    "env": {
      "VITE_LEGACY_DEP_OPTIMIZATION": "false",
      "VITE_DISABLE_DEPS_OPTIMIZATION": "true",
      "VITE_OPTIMIZE_DEPS": "false",
      "DISABLE_WEB_FONTS": "true",
      "ASTRO_TELEMETRY_DISABLED": "1",
      "NODE_OPTIONS": "--max-old-space-size=8192",
      "VERCEL": "1",
      "VERCEL_BUILD": "1",
      "NODE_ENV": "production",
      "MINIMAL_BUILD": "true",
      "EXCLUDE_HEAVY_DEPS": "true"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=63072000; includeSubDomains; preload"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/_astro/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/manifest.webmanifest",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/manifest+json"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/articles",
      "destination": "/blog",
      "permanent": true
    },
    {
      "source": "/docs/old-path",
      "destination": "/documentation",
      "permanent": true
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "staging": true
    }
  },
  "crons": [],
  "regions": ["iad1"]
}
